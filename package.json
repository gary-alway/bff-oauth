{
  "name": "bff-oauth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn kill-ports && concurrently \"yarn mock:auth\" \"next dev\"",
    "kill-ports": "lsof -ti:3000,9000 | xargs kill -9 2>/dev/null || true",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:e2e": "playwright test",
    "mock:auth": "node scripts/mock-oauth-server.mjs"
  },
  "dependencies": {
    "jose": "^6.0.11",
    "next": "16.1.1",
    "oauth4webapi": "^3.5.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.3",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "prettier": "^3.5.3",
    "typescript": "^5",
    "vitest": "^3.2.3"
  }
}
